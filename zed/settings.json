{
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 16,
  "buffer_font_size": 15,

  "buffer_font_features": {
    "calt": true,
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense"],
      "formatter": {
        "external": {
          "command": "powershell.exe",
          "arguments": [
            "-NoProfile",
            "-Command",
            "$tmp = New-TemporaryFile; $input | Set-Content -LiteralPath $tmp; vendor/bin/pint $tmp --quiet; Get-Content -LiteralPath $tmp; Remove-Item $tmp",
          ],
        },
      },
    },

    "Blade": {
      "formatter": {
        "external": {
          "command": "powershell.exe",
          "arguments": [
            "-NoProfile",
            "-Command",
            "$input | blade-formatter --stdin",
          ],
        },
      },
    },
  },
}
