{
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 16,
  "buffer_font_size": 15,

  "buffer_font_features": {
    "calt": true,
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense"],
    },

    "Blade": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "powershell.exe",
          "arguments": [
            "-NoProfile",
            "-Command",
            "Get-Content -LiteralPath '{buffer_path}' | blade-formatter --stdin",
          ],
        },
      },
    },
  },
}
