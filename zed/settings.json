{
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 16,
  "buffer_font_size": 15,

  "buffer_font_features": {
    "calt": true,
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense"],
      "formatter": {
        "external": {
          "command": "powershell.exe",
          "arguments": [
            "-NoProfile",
            "-Command",
            "vendor/bin/pint '{buffer_path}' > $null 2>&1; Get-Content -LiteralPath '{buffer_path}'",
          ],
        },
      },
    },

    "Blade": {
      "formatter": {
        "external": {
          "command": "powershell.exe",
          "arguments": [
            "-NoProfile",
            "-Command",
            "blade-formatter --write '{buffer_path}' > $null 2>&1; Get-Content -LiteralPath '{buffer_path}'",
          ],
        },
      },
    },
  },
}
